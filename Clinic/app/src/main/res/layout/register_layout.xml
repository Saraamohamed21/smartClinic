<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imv_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/p3"
        tools:layout_editor_absoluteY="29dp"
        />

    <EditText
        android:drawablePadding="10dp"
        android:id="@+id/ed_name"
        android:layout_width="400dp"
        android:padding="10dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Full Name"
        android:drawableLeft="@drawable/ic_action_name"
        android:textColorHint="#64a8fb"
        android:background="#11000000"
        android:textSize="15dp"/>

    <EditText
        android:drawablePadding="10dp"
        android:id="@+id/ed_phone"
        android:layout_width="400dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="7dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_phone"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone No"
        android:textColorHint="#64a8fb"
        android:padding="10dp"
        android:textSize="15dp"/>

    <EditText
        android:drawablePadding="10dp"
        android:id="@+id/edit_email"
        android:layout_width="400dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="291dp"
        android:layout_marginEnd="6dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_emai"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:hint="Email"
        android:textColorHint="#64a8fb"
        android:textSize="15dp" />

    <EditText
        android:drawablePadding="10dp"
        android:id="@+id/edit_Birth"
        android:layout_width="400dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="6dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_birth"
        android:ems="10"
        android:inputType="date"
        android:padding="10dp"
        android:hint="Birth Date"
        android:textColorHint="#64a8fb"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/edit_Gender"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="255dp"
        android:background="#11000000"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:text="Gender"
        android:textColor="#64a8fb"
        android:textSize="15dp" />

    <RadioGroup
        android:id="@+id/radioGrp"
        android:layout_width="209dp"
        android:layout_height="112dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="236dp"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="64dp"
        android:paddingRight="8dp">

        <RadioButton
            android:id="@+id/radioM"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:checked="true"
            android:text="Male"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/radioF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:checked="false"
            android:text="Female"
            android:textColor="#ffffff"
            android:textSize="14dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="400dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="6dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="date"
        android:padding="10dp"
        android:textColorHint="#64a8fb"
        android:textSize="15dp" />

    <Button
        android:id="@+id/button_sign"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/button_rectangle_green"
        android:text="sign in"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="85dp"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</RelativeLayout>